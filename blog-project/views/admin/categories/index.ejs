<%- include('../../partials/header') %>
    <%- include('../../partials/navbar') %>

        <div class="container">
            <hr>
            <h2>Categories</h2>
            <a class="btn btn-success" href="/admin/categories/new">Create category</a>
            <hr>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Slug</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(category=> { %>
                        <tr>
                            <th>
                                <%= category.id %>
                            </th>
                            <th>
                                <%= category.title %>
                            </th>
                            <th>
                                <%= category.slug %>
                            </th>
                            <th>

                                <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Edit</a>

                                <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDeletion(event, this)">
                                    <input type="hidden" name="id" value="<%= category.id %>">
                                    <button class="btn btn-danger">Delete</button>
                                </form>

                            </th>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>



        <%- include('../../partials/footer') %>

        <script>
            function confirmDeletion(event, form){
                event.preventDefault()

                var decision = confirm('VocÃª deseja deletar essa categoria?')
                
                if(decision){
                    form.submit()
                }
            }
        </script>